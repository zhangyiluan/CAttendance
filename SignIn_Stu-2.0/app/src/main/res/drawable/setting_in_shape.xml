<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--背景颜色-->
    <solid android:color="#FFFFFF" />

    <!--设置边距-->
    <padding
        android:bottom="6dp"
        android:left="15dp"
        android:right="15dp"
        android:top="6dp" />

    <!--控制边界线颜色和大小-->
    <stroke
        android:width="2dp"
        android:color="@color/darkgray" />

    <!--控制圆角大小-->
    <corners android:radius="12dp" />

</shape>